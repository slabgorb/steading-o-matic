extends layout

block content
  .container
    .jumbotron
      h1 Sign In
    form(action="/login", method="post")
      .form-group
        label(for='username') Username
        input.form-control(type='text', name='username')
      .form-group
        label(for='password') Password
        input.form-control(type='password', name='password')
      button(type:'submit') Submit
